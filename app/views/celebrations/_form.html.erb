<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 mt-3">
      <h1><%= form_title %></h1>
      <% if @celebration.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @celebration.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= form_for @celebration do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el tÃ­tulo de la pregunta"  %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", 
            placeholder: "Escribe tu pregunta", rows: 10 %>
      </div>

      <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, class: "form-control", 
            placeholder: "Date" %>
      </div>

      <div>
        <%= f.submit form_submit, class: 'btn btn-primary btn-block btn-lg' %>
      </div>
      <% end %>
      <%= link_to 'Back', celebrations_path %>
    </div>
  </div>
</div>
